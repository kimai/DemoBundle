{% import "macros/widgets.html.twig" as widgets %}

<div class="card card-danger">
    <div class="card-header with-border">
        <h3 class="card-title">Active Members</h3>

        <div class="card-tools pull-right">
            <span class="label label-danger">{{ data.amount }} users</span>
            <button type="button" class="btn btn-icon" data-widget="collapse"><i class="fa fa-minus"></i>
            </button>
            <button type="button" class="btn btn-icon" data-widget="remove"><i class="fa fa-times"></i>
            </button>
        </div>
    </div>
    <div class="card-body no-padding">
        <ul class="users-list clearfix">
            {% for user in data.users %}
                <li>
                    {{ widgets.user_avatar(user, false, 'profile-user-img') }}
                    <a class="users-list-name" href="{{ path('user_profile', {'username': user.username}) }}">{{ widgets.username(user) }}</a>
                    <span class="users-list-date">Last login: {{ user.lastLogin|date_short }}</span>
                </li>
            {% endfor %}
        </ul>
    </div>
    <div class="card-footer text-center">
        <a href="{{ path('admin_user') }}" class="uppercase">View All Users</a>
    </div>
</div>
